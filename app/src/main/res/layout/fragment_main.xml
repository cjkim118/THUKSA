<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#720081"
	tools:context=".fragment.MainFragment">

	<TextView
		android:text="칭화대 한국유학생회 공식메일 tsinghuakr@hotmail.com"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp"
		android:layout_alignParentBottom="true"
		android:textColor="#FFFFFF"
		android:textSize="15sp"
		android:layout_centerHorizontal="true"
		android:id="@+id/textView13" />

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="100dp"
		android:id="@+id/advertisement"
		android:layout_marginBottom="20dp"
		android:background="@mipmap/ic_launcher"
		android:layout_above="@+id/textView13"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="9주"
		android:layout_marginLeft="10dp"
		android:textStyle="bold"
		android:textSize="50sp"
		android:textColor="#ffffff"
		android:id="@+id/textView14"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true" />

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="80dp"
		android:id="@+id/weather"
		android:background="@drawable/cloudy"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_alignParentTop="true"
		android:layout_alignRight="@+id/textView13"
		android:layout_alignEnd="@+id/textView13"
		android:layout_alignBottom="@+id/textView14" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:textColor="#FFFFFF"
		android:id="@+id/temperature"
		android:textStyle="bold"
		android:textSize="20dp"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:layout_alignParentTop="true"
		android:layout_alignBottom="@+id/weather"
		android:autoText="false"
		android:textAlignment="gravity"
		android:gravity="center"
		android:layout_toRightOf="@+id/textView13"
		android:layout_toEndOf="@+id/textView13" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		android:id="@+id/PM25"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:autoText="false"
		android:textAlignment="gravity"
		android:gravity="center"
		android:layout_above="@+id/Metro_layout"
		android:layout_alignTop="@+id/textView15"
		android:layout_alignLeft="@+id/weather"
		android:layout_alignStart="@+id/weather" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="10dp"
		android:text="2015/12/01 화요일"
		android:textColor="#FFFFFF"
		android:id="@+id/textView15"
		android:layout_below="@+id/textView14"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true" />


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_above="@+id/advertisement"
		android:id="@+id/Metro_layout"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:layout_marginTop="10dp"
		android:layout_below="@+id/textView15">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="0.5"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textColor="#FFFFFF"
				android:text="열린공간"
				android:textSize="45sp"
				android:textStyle="bold"
				android:id="@+id/textView17"
				android:gravity="center"
				android:layout_alignParentBottom="true"
				android:layout_alignParentRight="true"
				android:layout_alignParentEnd="true" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text=" 학생회"
				android:textSize="35sp"
				android:textStyle="bold"
				android:gravity="left|center"
				android:background="#e2a2ee"
				android:textColor="#502376"
				android:id="@+id/textView21"
				android:layout_weight=".25"
				android:layout_below="@+id/textView17"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight=".25"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textColor="#502376"
				android:background="#b059ca"
				android:textStyle="bold"
				android:textSize="35sp"
				android:text="Q&amp;A  "
				android:id="@+id/textView16"
				android:gravity="right|center"
				android:layout_below="@+id/textView21"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1">

			<TextView
				android:layout_width="fill_parent"
				android:layout_height="0dp"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="공지  "
				android:textSize="35sp"
				android:textStyle="bold"
				android:background="#b059bf"
				android:gravity="right|center"
				android:textColor="#502376"
				android:layout_weight=".25"
				android:id="@+id/textView18"/>

			<TextView
				android:layout_width="fill_parent"
				android:layout_height="0dp"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="  정보"
				android:textStyle="bold"
				android:background="#e2a2ee"
				android:textSize="35sp"
				android:gravity="left|center"
				android:layout_weight=".25"
				android:textColor="#502376"
				android:id="@+id/textView19"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="등업신청"
				android:textSize="45sp"
				android:textStyle="bold"
				android:textColor="#FFFFFF"
				android:gravity="center"
				android:id="@+id/textView20"
				android:layout_weight="0.5" />
		</LinearLayout>
	</LinearLayout>

</RelativeLayout>

